<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Diagonal line pattern -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="10dp" android:height="10dp"/>
            <stroke
                android:width="0.5dp"
                android:color="#FFFFFF"
                android:dashWidth="5dp"
                android:dashGap="5dp"/>
        </shape>
    </item>
</layer-list>