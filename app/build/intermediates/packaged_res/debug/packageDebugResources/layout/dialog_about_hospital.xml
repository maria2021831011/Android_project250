<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_hospital"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Our Hospital!"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We are a leading healthcare provider with state-of-the-art facilities and a team of expert doctors."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules for Using This App:\n1. Always keep your profile updated.\n2. Book appointments in advance.\n3. Contact us for any queries."
        android:textSize="12sp"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnContactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"/>
</LinearLayout>